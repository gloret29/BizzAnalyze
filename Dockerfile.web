# Dockerfile pour l'application web Next.js
FROM node:18-alpine AS base

# Installer les dépendances nécessaires
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Argument pour l'URL de l'API (build-time)
# Laissez vide pour utiliser une URL relative (routée par reverse proxy)
ARG NEXT_PUBLIC_API_URL=
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

# Copier les fichiers de configuration
COPY package.json package-lock.json ./
COPY turbo.json ./

# Copier les workspaces
COPY packages ./packages
COPY apps/web ./apps/web

# Installer les dépendances
RUN npm ci

# Build avec Turbo (gère automatiquement les dépendances et leurs dépendances)
# --ui=stream pour éviter les problèmes TUI en CI/Docker
# --no-daemon pour éviter les problèmes de daemon en environnement conteneurisé
RUN npx turbo run build --filter=@bizzanalyze/web... --ui=stream --no-daemon

# Image de production
FROM node:18-alpine AS runner

WORKDIR /app

# Installer wget pour le healthcheck
RUN apk add --no-cache wget

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Créer un utilisateur non-root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copier les fichiers nécessaires depuis le build standalone
COPY --from=base --chown=nextjs:nodejs /app/apps/web/.next/standalone ./
COPY --from=base --chown=nextjs:nodejs /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=base --chown=nextjs:nodejs /app/apps/web/public ./apps/web/public

USER nextjs

# Exposer le port
EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Commande de démarrage
CMD ["node", "apps/web/server.js"]

